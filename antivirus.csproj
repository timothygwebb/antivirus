<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworkVersion>v1.1</TargetFrameworkVersion>
    <StartupObject>antivirus.Program</StartupObject>
    <IntermediateOutputPath>obj\</IntermediateOutputPath>
    <AssemblyName>antivirus</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Removed modern dependencies (xunit.assert, xunit.extensibility.core) -->
    <Compile Include="*.cs" Exclude="*Backup.cs" />
    <None Include="BrowserRepair_Backup.cs" />
    <None Include="ClamAVDefinitionsManager_Backup.cs" />
    <None Include="DefaultLogger_Backup.cs" />
    <None Include="Definitions_Backup.cs" />
    <None Include="ILogger_Backup.cs" />
    <None Include="Logger_Backup.cs" />
    <None Include="MBRChecker_Backup.cs" />
    <None Include="Program_Backup.cs" />
    <None Include="Quarantine_Backup.cs" />
    <None Include="Scanner_Backup.cs" />
  </ItemGroup>

  <Target Name="Clean">
    <RemoveDir Directories="$(IntermediateOutputPath)" />
  </Target>

  <Target Name="Build">
    <Message Text="Building the project..." />
    <Csc Sources="@(Compile)" OutputAssembly="bin\$(AssemblyName).exe" />
  </Target>

  <Target Name="Rebuild" DependsOnTargets="Clean;Build">
    <Message Text="Rebuilding the project..." />
  </Target>

</Project>
